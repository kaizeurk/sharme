{# src/OC/PlatformBundle/Resources/views/Accueil/page-signin.html.twig #}
{% extends "::layout.html.twig" %}
    {% block title %}
      Connexion - {{ parent() }}
    {% endblock %}
	{% block body %}	
			<div id="shop">

				<!-- PAGE TITLE -->
				<header id="page-title">
					<div class="container">
						<h1>Connexion</h1>

						<ul class="breadcrumb">
							<li><a  href="{{ path('sharmecanadaplatform_home') }}">Accueil</a></li>
							<li class="active">Connexion</li>
						</ul>
					</div>
				</header>


				<section class="container">

					<div class="row">

						<!-- LOGIN -->
						<div class="col-md-6">

							<h2><strong>Connexion</strong></h2>

							<form class="white-row" method="post" action="#">

								<!-- alert failed -->
								<div class="alert alert-danger">
									<i class="fa fa-frown-o"></i> 
									Erreur <strong>Adresse Courriel</strong> ou <strong>Mot de passe</strong>!
								</div>

								<div class="row">
									<div class="col-md-12">
										<div class="form-group">
											<label>Adresse Courriel</label>
											<input type="text" value="" class="form-control">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<div class="form-group">
											<label>Mot de passe</label>
											<input type="password" value="" class="form-control">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<span class="remember-box checkbox">
											<label for="rememberme">
												<input type="checkbox" id="rememberme" name="rememberme">Se rappeler de moi
											</label>
										</span>
									</div>
									<div class="col-md-6">
										<input type="submit" value="Sign In" class="btn btn-primary pull-right" data-loading-text="Loading...">
									</div>
								</div>

							</form>

						</div>
						<!-- /LOGIN -->

						<!-- PASSWORD -->
						<div class="col-md-6">

							<h2>Mot de Passe <strong>Oubli&#233;</strong>?</h2>

							<div class="white-row">

								<p>
									Lid est laborum dolo rumes fugats untras. Etharums ser quidem rerum facilis dolores nemis omnis fugats vitaes nemo.
								</p>

								<!-- alert success -->
								<div class="alert alert-success">
									<i class="fa fa-check-circle"></i> 
									<strong>Nouveau mot de passe!</strong> V&#233;rifier vos Courriel!
								</div>

								<!-- alert failed -->
								<div class="alert alert-danger">
									<i class="fa fa-frown-o"></i> 
									<strong>Adresse Courriel</strong> inexistante!
								</div>

								<!-- password form -->
								<label>Type your E-mail Address</label>
								<form class="input-group" method="post" action="#">
									<input type="text" class="form-control" name="s" id="s" value="" placeholder="E-mail Address" />
									<span class="input-group-btn">
										<button class="btn btn-primary">ENVOYER</button>
									</span>
								</form>

							</div>

						</div>
						<!-- /PASSWORD -->

					</div>


					<p class="white-row">
						vous n'avez pas de compte? <a href="page-signup.html">Clicker pour Cr&#233;er votre compte</a>, Gratui!
					</p>

				</section>

			</div>
		</div>
		<!-- /WRAPPER -->
    {% endblock %}

